{
  "manifest_version": 2,

  "name": "NUS Libraries Extension",
  "author": "Belson Heng",
  "description": "For NUS alumni and NUS Libraries external members to access electronic resources on-site.",
  "version": "0.3.0",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "assets/icons/e-resources_icon_128px.png",
    "default_title": "NUS Libraries",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["file://*/*"],
      "js": [
        "popup.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "assets/icons/e-resources_icon_16px.png",
    "48": "assets/icons/e-resources_icon_48px.png",
    "128": "assets/icons/e-resources_icon_128px.png"
  },
  "permissions": [
    "alarms",
    "browsingData",
    "notifications",
    "tabs",
    "activeTab"
  ],
  "web_accessible_resources": [
    "icons/*.png"
  ]
}
